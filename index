    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var container = document.querySelector('.container');
    
            function createDamageTable(text) {
                var table = document.createElement('table');
                table.style.position = 'absolute';
                table.style.top = '5%';
                table.style.right = '40%';
                table.style.backgroundColor = 'white';
                table.style.color = 'black';
                table.style.borderCollapse = 'collapse';
                table.style.border = '1px solid black';
    
                var tbody = document.createElement('tbody');
    
                var row = tbody.insertRow();
                var cell1 = row.insertCell();
                var cell2 = row.insertCell();
    
                cell1.textContent = 'Schadensart:';
                cell2.textContent = text;
    
                table.appendChild(tbody);
                container.appendChild(table);
            }
    
            function removeDamageTable() {
                var table = container.querySelector('table');
                if (table) {
                    table.remove();
                }
            }
    
            document.getElementById('front-right').addEventListener('change', function() {
                if (this.checked) {
                    removeDamageTable();
                    createDamageTable('Fahrzeugfront rechts');
                } else {
                    removeDamageTable();
                }
            });
    
            document.getElementById('front-left').addEventListener('change', function() {
                if (this.checked) {
                    removeDamageTable();
                    createDamageTable('Fahrzeugfront links');
                } else {
                    removeDamageTable();
                }
            });
    
            document.getElementById('back-right').addEventListener('change', function() {
                if (this.checked) {
                    removeDamageTable();
                    createDamageTable('Fahrzeugheck rechts');
                } else {
                    removeDamageTable();
                }
            });
    
            document.getElementById('back-left').addEventListener('change', function() {
                if (this.checked) {
                    removeDamageTable();
                    createDamageTable('Fahrzeugheck links');
                } else {
                    removeDamageTable();
                }
            });
    
            document.getElementById('middle-top').addEventListener('change', function() {
                if (this.checked) {
                    removeDamageTable();
                    createDamageTable('Fahrzeug rechts mittig');
                } else {
                    removeDamageTable();
                }
            });
    
            document.getElementById('middle-bottom').addEventListener('change', function() {
                if (this.checked) {
                    removeDamageTable();
                    createDamageTable('Fahrzeug links mittig');
                } else {
                    removeDamageTable();
                }
            });
    
            document.getElementById('middle-center').addEventListener('change', function() {
                if (this.checked) {
                    removeDamageTable();
                    createDamageTable('Fahrzeugdach');
                } else {
                    removeDamageTable();
                }
            });
        });
    </script>
    
